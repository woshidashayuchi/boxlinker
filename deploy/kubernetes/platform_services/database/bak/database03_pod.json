{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "database03",
        "namespace": "boxlinker",
        "labels": 
         {
          "name": "database03"
         }
    },
    "spec": {
        "imagePullSecrets": [
            {
                 "name": "registry-key"
            }
         ],
        "containers": [
            {
                "name": "mariadb03",
                "imagePullPolicy": "Always",
                "image": "index.boxlinker.com/boxlinker/centos-mariadb:cluster-node-1.0.2",
                "ports": [
                    {
                        "containerPort": 3306,
                        "containerPort": 4567
                    }
                ],
                "env": [
                    {
                        "name": "database01",
                        "value": "database01"
                    },
                    {
                        "name": "database02",
                        "value": "database02"
                    },
                    {
                        "name": "database03",
                        "value": "database03"
                    },
                    {
                        "name": "mysql_root_password",
                        "value": "boxlinker"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/database",
                        "name": "rbddisk"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbddisk",
                "rbd": {
                    "monitors": [
    				    "192.168.1.5:5000",
                                    "192.168.1.8:5000",
                                    "192.168.1.9:5000"
                                ],
                    "pool": "pool_hdd",
                    "image": "database03disk01",
                    "user": "admin",
                    "keyring": "/etc/ceph/keyring",
                    "fsType": "xfs",
                    "readOnly": false
                }
            }
        ]
    }
}

{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "centos01"
    },
    "spec": {
        "containers": [
            {
                "name": "centos01-ssh",
                "image": "registry.36ap.com/library/centos-ssh",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/rbd",
                        "name": "rbddisk"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbddisk",
                "rbd": {
                    "monitors": [
        						"172.20.10.11:5000",
						        "172.20.10.12:5000",
        						"172.20.10.13:5000"
    				 ],
                    "pool": "vmdisk_hdd",
                    "image": "cdisk02",
                    "user": "admin",
                    "keyring": "/etc/ceph/keyring",
                    "fsType": "xfs",
                    "readOnly": false
                }
            }
        ]
    }
}

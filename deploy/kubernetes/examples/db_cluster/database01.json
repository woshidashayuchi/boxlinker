{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "database01",
        "labels": 
         {
          "name": "database01"
         }
    },
    "spec": {
        "containers": [
            {
                "name": "mariadb01",
                "image": "registry.36ap.com/library/centos-mariadb:cluster-first-1.0.0",
                "volumeMounts": [
                    {
                        "mountPath": "/database",
                        "name": "rbddisk"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbddisk",
                "rbd": {
                    "monitors": [
        						"10.46.182.28:5000",
						        "10.46.183.201:5000",
        						"10.24.200.207:5000"
    				 ],
                    "pool": "data_pool",
                    "image": "database01disk01",
                    "user": "admin",
                    "keyring": "/etc/ceph/keyring",
                    "fsType": "xfs",
                    "readOnly": false
                }
            }
        ],
        "ports": [
            {
                "containerPort": "3306",
                "containerPort": "4567"
            }
        ]
    }
}

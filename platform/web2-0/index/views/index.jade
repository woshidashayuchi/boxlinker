block content
        div.indexContainer
            div.indexUser
                div.w1200
                    div.indexLogo.left
                        a(href="/")
                            img(src="/statics/image/logo.png")
                    div.indexLogin.right
                        if user&&user.user_name
                            div.userAfter
                                a#userName.icon-username(href="javascript:;")= user.user_name
                                div.userDown
                                    a#quit(href="javascript:;") 退出
                        else
                            div.userBefore
                                a.icon-username(href="/signUp") 注册
                                = "|"
                                a.icon-username1(href="/login") 登录
                    div.indexNav.left
                        ul
                            li
                                a(href="javascript:;") 首页
                            li
                                a(href="#indexSuperiority") 优势
                            li
                                a(href="#indexService") 服务
                            //li
                            //    a(href="#indexCase") 案例
                            li
                                a(href="https://docs.boxlinker.com",target="_blank") 文档
                            li
                              a(href="#indexAbout") 我们
             //手机端导航
            div.indexNav_m
                ul
                    li.current
                        a(href="javascript:;") 首页
                    li
                        a(href="javascript:;") 优势
                    li
                        a(href="javascript:;") 服务
                    li
                        a(href="javascript:;") 文档
                    li
                        a(href="javascript:;") 我们
            div.indexBanner
                div.w1200
                    div#bannerBtn.btnBox
                        if user&&user.user_name
                            a.btn.noMargin(href=url.console) 回到控制台
                        else
                            a.btn(href="/login") 登录
                            a.btn(href="/signUp") 注册
             //手机端banner
            div.indexBanner_m
                div.bannerslide
                    div.bannerswiper
                        img(src="/statics/image/banner_img.jpg")
            div#indexSuperiority.indexSuperiority
                div.w1200
                    div.headerCenter BoxLinker 优势
                    div.indexItemBd
                        img(src="/statics/image/superiority_bg.png")
                        div.indexSuperiorityItem.indexSuperiorityItem1.icon-cxcx
                            h3 持续创新
                            p 获得持续迭代的创新交付能力和永久可用的业务连续性
                        div.indexSuperiorityItem.indexSuperiorityItem2.icon-zdyw
                            h3 自动运维
                            p 将传统的基础架构一步带入谷歌级别的云化数据中心时代
                        div.indexSuperiorityItem.indexSuperiorityItem3.icon-bjjf
                            h3 便捷交付

{{if .Flash.ErrorMsg}}
	<div id="floating-top-right" class="floating-container ">
		<div class="alert-wrap in animated jellyIn">
			<div class="alert alert-danger" role="alert">
				<button class="close" type="button"><i class="pci-cross pci-circle"></i></button>
				<div class="media">
					<div class="media-left alert-icon"><i class="pli-like-2 icon-2x"></i></div>
					<div class="media-body"><h4 class="alert-title"></h4><p class="alert-message">{{.Flash.ErrorMsg | Str2html}}</p></div>
				</div>
			</div>
		</div>
	</div>
{{end}}
